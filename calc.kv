<MyLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 45
            size_hint: 1, 0.3

        GridLayout:
            cols: 4
            rows: 5

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "<<"
                on_press: root.touch() ; root.rem()

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "!Exit"
                on_press: root.touch() ; root.ex()

            Button:
                id: clear
                size_hint: 0.2, 0.2
                font_size: 32
                text: "C"
                on_press: root.touch() ; root.clear()

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "/"
                on_press: root.touch() ; root.division()

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "7"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.button_press(7)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "8"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.button_press(8)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "9"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ;  root.button_press(9)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "x"
                on_press: root.touch() ; root.multiply()

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "4"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.button_press(4)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "5"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.button_press(5)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "6"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.button_press(6)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "-"
                on_press: root.touch() ; root.subtract()

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "1"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.button_press(1)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "2"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.button_press(2)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "3"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press:root.touch() ; root.button_press(3)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "+"
                on_press:root.touch() ; root.add()

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "%"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.per()

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "0"
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.button_press(0)

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "."
                background_color: (157/255 , 157/255 , 157/255 )
                on_press: root.touch() ; root.button_press(".")

            Button:
                size_hint: 0.2, 0.2
                font_size: 32
                text: "="
                background_color: (0/255 , 0/255 , 150/255 )
                on_press: root.touch() ; root.equal()
